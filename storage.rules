rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ── Documents: orgId/dealId/filename ─────────────────────────────────────
    match /documents/{orgId}/{dealId}/{filename} {

      // GP can upload/read/delete their own org's files
      allow read: if request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.orgId == orgId;

      allow write: if request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.orgId == orgId &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role != 'Investor' &&
        request.resource.size < 25 * 1024 * 1024 && // 25MB max
        request.resource.contentType.matches('application/.*|image/.*|text/.*');

      allow delete: if request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.orgId == orgId &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role != 'Investor';
    }

    // ── Avatars/logos ─────────────────────────────────────────────────────────
    match /avatars/{orgId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.orgId == orgId &&
        request.resource.size < 2 * 1024 * 1024 && // 2MB max
        request.resource.contentType.matches('image/.*');
    }
  }
}
